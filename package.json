{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "mackerel-alerts",
  "title": "Mackerel Alerts",
  "description": "",
  "icon": "mackerel.png",
  "author": "motemen",
  "license": "MIT",
  "preferences": [
    {
      "name": "apiKey",
      "type": "password",
      "required": true,
      "title": "API key",
      "description": "Mackerel API key",
      "placeholder": "Visit https://mackerel.io/my?tab=apikeys to obtain one"
    }
  ],
  "commands": [
    {
      "name": "alerts",
      "title": "View Mackerel Alerts",
      "description": "View open alerts on mackerel.io",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.26.3",
    "axios": "^0.24.0",
    "date-fns": "^2.28.0",
    "dayjs": "^1.10.7",
    "swr": "^1.1.2"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint"
  }
}
